{
  "manifest_version": 2,

  "name": "lecoinannote",
  "version": "1.0",
  "description": "Annoter les offres leboncoin.",

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["*://*.leboncoin.fr/carte/*"],
      "css": ["stylesheet.css"],
      "js": ["map.js"]
    },
    {
      "matches": ["*://*.leboncoin.fr/ad/*"],
      "js": ["ad.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "@lecoinannote"
    }
  }
}
