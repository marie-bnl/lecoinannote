{
  "manifest_version": 2,

  "name": "lecoinannot√©",
  "version": "1.5",
  "description": "Annoter les offres leboncoin.",
  "homepage_url": "https://github.com/victorbnl/lecoinannote",

  "icons": {
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["*://*.leboncoin.fr/carte/*"],
      "css": ["stylesheet.css"],
      "js": ["map.js"]
    },
    {
      "matches": ["*://*.leboncoin.fr/ad/*"],
      "js": ["ad.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "@lecoinannote"
    }
  }
}
